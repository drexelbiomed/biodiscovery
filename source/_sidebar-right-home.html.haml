.home-panel
  %h3 Upcoming Events
  %ul.unstyled
    - rss_feed.first(3).each do |event|
      %li
        %strong= home_event(event, "title")
        %br
        = home_event(event, "speaker")
        / = link_to "#{Sanitize.fragment(event[:title]).titleize.slice(0, 48).insert(-1, "...")}", "#{http_prefix}events/events_list"
        / = " by #{Sanitize.fragment(event[:speaker]).slice(0, 48).insert(-1, "...")}"
        %br
        = home_event(event, "time")
        /= event[:time].strftime("%A, %b %d, %Y â€“ %l:%M %p")
  = link_to "Events", "#{http_prefix}events/events_list", class: "more-link"